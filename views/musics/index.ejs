<%- include('../partials/header') %> 

<% if (user) { %>
<a href="/musics/new">Make a new post!</a>
<% } %>

<% posts.forEach(function(p) { %>
    <div>
        <% if (user?._id.equals(p.user)) { %>
        <a href="/musics/<%= p._id %>/edit">Edit</a>
        <form action="/musics/<%= p._id %>?_method=DELETE" method="POST">
            <button type="submit">Delete</button>
        </form>        
    <% } %>
        <img alt="avatar" src="<%= p.userAvatar %>" referrerpolicy="no-referrer">
        <%= p.userName %>
        <a href="<%= p.link %>" target="_blank">link</a>
        <%= p.instrument %>
        <%= p.postComment %>
        <a href="/musics/<%= p._id %>">Comments</a>
    </div>
        <% }); %>

<%- include('../partials/footer') %> 

